<div class="container">
  <div class="row">
    <div class="col-sm-9">
      <h1><%= @artist.name %></h1>
      <h3>Albums (<%= @artist.albums.length %>)</h3>
        <% @artist.albums.each do |album| %>
          <div class="col-xs-12 col-sm-6 col-md-3">
            <div class="card box-shadow">
              <img class="img-responsive" src="<%= album.image_url %>" alt="<%= album.name %>" />
              <h4><%= album.name %></h4>
              <h5 style='padding-bottom: 20px;'><%= album.released_at %></h5>
            </div>
          </div>
        <% end %>
      </div>
      <div class="col-sm-3">
      <img class="img-responsive" src="<%= @artist.image_url %>" alt="<%= @artist.name %>" />
      </div>
    </div>
  </div>
</div>